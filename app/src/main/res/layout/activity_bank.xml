<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.UserActivities.BankActivity">

    <ImageView
        android:id="@+id/BankImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/BankGuideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banker_bank" />

    <android.support.constraint.Guideline
        android:id="@+id/BankGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <ScrollView
        android:id="@+id/BankScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/ButtonGuideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BankGuideline">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/BankList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points"
                android:textSize="24sp"
                app:layout_constraintLeft_toLeftOf="@id/BankList"
                app:layout_constraintRight_toRightOf="@id/BankList"
                app:layout_constraintTop_toTopOf="@id/BankList" />

            <TextView
                android:id="@+id/pointTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                app:layout_constraintBaseline_toBaselineOf="@id/Points"
                app:layout_constraintRight_toLeftOf="@id/Points" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <android.support.constraint.Guideline
        android:id="@+id/ButtonGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="60dp" />

    <ImageButton
        android:id="@+id/TaskButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/BankButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ButtonGuideline"
        app:srcCompat="@drawable/sheriff" />

    <ImageButton
        android:id="@+id/BankButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/TaskButton"
        app:layout_constraintLeft_toRightOf="@id/TaskButton"
        app:layout_constraintRight_toLeftOf="@id/StoreButton"
        app:layout_constraintTop_toTopOf="@id/TaskButton"
        app:srcCompat="@drawable/bank" />

    <ImageButton
        android:id="@+id/StoreButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/BankButton"
        app:layout_constraintLeft_toRightOf="@id/BankButton"
        app:layout_constraintRight_toLeftOf="@id/RulesButton"
        app:layout_constraintTop_toTopOf="@id/BankButton"
        app:srcCompat="@drawable/saloon" />

    <ImageButton
        android:id="@+id/RulesButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/StoreButton"
        app:layout_constraintLeft_toRightOf="@id/StoreButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/StoreButton"
        app:srcCompat="@drawable/wanted_poster" />

</android.support.constraint.ConstraintLayout>