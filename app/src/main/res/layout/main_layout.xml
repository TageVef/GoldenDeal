<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ViewFlipper
        android:id="@+id/optionFlipper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/mainView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/OptionsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Options"
                app:layout_constraintBaseline_toBaselineOf="@+id/FaceButton"
                app:layout_constraintRight_toRightOf="@id/mainView" />

            <Button
                android:id="@+id/FaceButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Face"
                app:layout_constraintLeft_toLeftOf="@id/mainView"
                app:layout_constraintTop_toTopOf="@id/mainView" />

            <ViewFlipper
                android:id="@+id/pageFlipper"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/FaceButton">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/taskView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/addPoints"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="add 10 Points"
                        app:layout_constraintEnd_toEndOf="@+id/taskView"
                        app:layout_constraintStart_toStartOf="@+id/taskView"
                        app:layout_constraintTop_toTopOf="@+id/taskView" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/shopView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/removePoints"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="remove 10 Points"
                        app:layout_constraintEnd_toEndOf="@id/shopView"
                        app:layout_constraintStart_toStartOf="@id/shopView"
                        app:layout_constraintTop_toTopOf="@id/shopView" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/bankView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/pointTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        app:layout_constraintBaseline_toBaselineOf="@id/Points"
                        app:layout_constraintRight_toLeftOf="@id/Points" />

                    <TextView
                        android:id="@+id/Points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Points"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/rulesView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/Rules"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="rules"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

            </ViewFlipper>

            <Button
                android:id="@+id/taskButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tasks"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/bankButton"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/shopButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Shop"
                app:layout_constraintBaseline_toBaselineOf="@+id/bankButton"
                app:layout_constraintEnd_toStartOf="@+id/rulesButton"
                app:layout_constraintStart_toEndOf="@+id/bankButton" />

            <Button
                android:id="@+id/bankButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Bank"
                app:layout_constraintBaseline_toBaselineOf="@+id/taskButton"
                app:layout_constraintEnd_toStartOf="@+id/shopButton"
                app:layout_constraintStart_toEndOf="@+id/taskButton" />

            <Button
                android:id="@+id/rulesButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Rules"
                app:layout_constraintBaseline_toBaselineOf="@+id/shopButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/shopButton" />

            <View
                android:id="@+id/divider"
                android:layout_width="368dp"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toTopOf="@+id/shopButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/optionsView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/Optionsback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                app:layout_constraintRight_toRightOf="@id/optionsView"
                app:layout_constraintTop_toTopOf="@id/optionsView" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/faceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/FaceBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                app:layout_constraintLeft_toLeftOf="@id/faceView"
                app:layout_constraintTop_toTopOf="@id/faceView" />

            <ImageView
                android:id="@+id/faceImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/faceView"
                app:layout_constraintRight_toRightOf="@id/faceView"
                app:layout_constraintTop_toBottomOf="@id/FaceBack"
                app:srcCompat="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="option 1"
                app:layout_constraintLeft_toLeftOf="@id/faceView"
                app:layout_constraintRight_toLeftOf="@id/option2"
                app:layout_constraintTop_toBottomOf="@id/faceImage" />

            <Button
                android:id="@+id/option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="option 2"
                app:layout_constraintLeft_toRightOf="@id/option1"
                app:layout_constraintRight_toRightOf="@id/faceView"
                app:layout_constraintTop_toBottomOf="@id/faceImage" />

            <Button
                android:id="@+id/option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="option 3"
                app:layout_constraintLeft_toLeftOf="@id/option1"
                app:layout_constraintTop_toBottomOf="@+id/option1" />

            <Button
                android:id="@+id/option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="option 4"
                app:layout_constraintRight_toRightOf="@+id/option2"
                app:layout_constraintTop_toBottomOf="@+id/option2" />
        </android.support.constraint.ConstraintLayout>

    </ViewFlipper>






</android.support.constraint.ConstraintLayout>